@import 'utils/fonts.styl'
@import 'utils/vars.styl'
@import 'utils/mixins.styl'
@import 'libs.styl'

html
  font-size baseFontSize
  height 100%
  line-height 1.3

body
  height 100%
  font-family mainFont
  background-color whiteBG

h1,h2,h3,h4,h5,h6
  margin 0
  font-family titleFont

ul,li
  list-style-type none
  margin 0
  padding 0

p
  margin 0

a
  color black
  text-decoration none

audio,
canvas,
iframe,
img,
svg,
video
  vertical-align middle

textarea
  resize none

section
  position relative

input,
select,
button
  outline none

*, *:before, *:after
  box-sizing border-box

.container
  max-width 1200px
  margin 0 auto
  padding 0 15px

.section-heading
  margin-bottom 50px
  text-align center
  &_lines
    position relative
    &:before,
    &:after
      content ''
      position absolute
      display block
      width 32%
      height 7px
      top 26%
      transform translateY(-50%)
      border-width 1px 0
      border-style solid
      border-color #dedede
    &:before
      left 0
    &:after
      right 0
  &__title
    display inline-block
    margin-bottom 10px
    font-family titleFont
    font-size rem(26)
    line-height 1.2
    span
      color mainColor
    &_black
      color blackColor
    &_white
      color whiteColor
    &_shapes
      position relative
      display flex
      align-items center
      justify-content center
      i
        margin 0 20px
        font-size 15px
  &__subtitle
    font-family mainFont
    font-size rem(16)
    line-height 1.2
    &_gray
      color #8a8a8a
    &_black
      color #606060

@import "sections/home-section.styl"
@import "sections/main-navigation.styl"
@import "sections/what-we-offer.styl"