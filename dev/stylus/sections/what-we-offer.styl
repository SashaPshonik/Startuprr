.what-we-offer
  padding 110px 0

.what-we-offer-list
  display grid
  grid-template-columns repeat(3, 1fr)
  grid-column-gap 25px

.what-we-offer-item
  display flex
  flex-direction column
  align-items center
  text-align center
  &:hover
    .what-we-offer-item__icon
      background-color mainColor
    .what-we-offer-item__btn
      background-color mainColor
      border-color mainColor
      color whiteColor
  &__icon
    display flex
    margin-bottom 30px
    size(100px)
    flex-direction column
    justify-content center
    background-color blackColor
    border-radius 50%
    transition background-color 0.75s ease
    i
      font-size 36px
      color whiteColor
  &__title
    margin-bottom 20px
    font-family titleFont
    font-size rem(14)
    color #606060
  &__text
    margin-bottom 23px
    font-family mainFont
    font-size rem(14)
    line-height 2
    text-align center
    color #7a7a7a
  &__btn
    padding 10px
    background transparent
    border 1px solid grayColor
    border-radius 3px
    font-family titleFont
    font-size rem(10)
    transition all 0.75s ease